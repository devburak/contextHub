{
  "name": "@contexthub/common",
  "version": "0.1.0",
  "private": true,
  "description": "Shared models, types and utilities for contextHub",
  "main": "src/index.js",
  "type": "commonjs",
  "scripts": {
    "build": "echo \"Common package built - models ready\"",
    "test": "node ../../scripts/run-tool.mjs vitest run --dir src",
    "test:watch": "node ../../scripts/run-tool.mjs vitest --dir src",
    "lint": "node ../../scripts/run-tool.mjs eslint . --ext .js,.ts",
    "lint:fix": "node ../../scripts/run-tool.mjs eslint . --ext .js,.ts --fix",
    "format": "node ../../scripts/run-tool.mjs prettier --write .",
    "format:check": "node ../../scripts/run-tool.mjs prettier --check .",
    "clean": "rm -rf dist .turbo",
    "type-check": "echo \"No TypeScript in common yet\"",
    "models:validate": "node -e \"require('./src/models'); console.log('All models loaded successfully')\"",
    "db:indexes": "node -e \"require('./src/database').createIndexes().then(() => console.log('Indexes created'))\""
  },
  "dependencies": {
    "mongoose": "^7.5.0",
    "bcryptjs": "^2.4.3"
  }
}
